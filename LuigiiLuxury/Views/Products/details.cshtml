@model LuigiiLuxury.Domain.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Product details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="" style="min-height: 80vh;">
    <div class="mb-5" style=" border-bottom: 1px solid #c6c6c6;">
        <a href="/Collections" style="font-size: 12px; text-transform: uppercase; display: block; padding: 15px 0;"><i class="fa fa-solid fa-chevron-left"></i> back</a>
    </div>
    <div class="container pb-5 row d-flex justify-content-between align-items-center">
        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-3">
            <div id="myCarousel" class="carousel carousel-dark slide" data-bs-ride="carousel">

                <ol class="carousel-indicators">
                    <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="3"></li>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="4"></li>
                </ol>

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Url.Content(Model.Thumbnail)" alt="slide 1">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Url.Content(Model.Thumbnail)" alt="slide 2">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Url.Content(Model.Thumbnail)" alt="slide 3">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Url.Content(Model.Thumbnail)" alt="slide 4">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Url.Content(Model.Thumbnail)" alt="slide 5">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
        </div>

        <div class="col-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 d-flex justify-content-center align-items-center">
            <div class="w-100">
                <div class="mb-5">
                    <h5 class="text-uppercase" style=" font-size: 14px; font-weight: bold;">@Model.Name</h5>
                    @if (Model.BrandId == null)
                    {
                        <label class="text-uppercase text-muted brand">NON BRAND</label>
                    }
                    else
                    {
                        <label class="text-uppercase text-muted brand">@Model.Brand.Name</label>
                    }
                </div>

                <div class="mb-5 d-flex justify-content-between">
                    <div class="border border-dark" style=" width: 45%; padding: 10px;"><label>$@Model.Price.00</label></div>
                    <div class="border border-dark" style=" width: 45%; padding: 10px;"><label>Only @Model.NumberOfProducts</label></div>
                </div>

                @*<div class="mb-5 price d-flex flex-row align-items-center">
                        <div class="ml-2">
                            <small class="dis-price">@Model.DiscountPrice</small>
                        </div>
                    </div>

                    <div class="mb-5">
                        <p class="about">@Model.Description</p>
                    </div>*@


                <!--ADD TO CART BUTTON-->
                @if (Model.AvailabilityStatusCode == "SOLD")
                {
                    <div class="mb-5 d-flex align-items-center justify-content-center">
                        <p class="btn text-uppercase text-white bg-secondary" style="width: 100%; padding: 15px 30px;">sold out</p>
                    </div>
                }
                else
                {
                    <div class="mb-5 d-flex align-items-center justify-content-center">
                        <a href="/Cart/AddToCart?productId=@Model.Id" class="btn btn-dark text-uppercase" style="width: 100%; padding: 15px 30px;"><p class="text-white">Add to cart</p></a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
