@model List<LuigiiLuxury.Domain.ViewModels.OrderDetailsViewModel>[]

@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Orders</h2>
@for (int i = 0; i < Model.Length; i++)
{
    <div class="mb-5">
        <div class="table-responsive">
            <table id="example" class="table table-hover table-bordered" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th style="" class="th-sm"></th>
                        <th style="width: 40%;" class="th-sm">Product</th>
                        <th style="width: 20%;" class="th-sm">Quantity</th>
                        <th style="width: 10%;">Price</th>
                        <th style="width: 20%;">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetails in Model[i])
                    {
                        <tr>
                            <td><img src="@Url.Content(orderDetails.Product.Thumbnail)" style="width: 100px;" /></td>
                            <td>@orderDetails.Product.ProductTitle</td>
                            <td>@orderDetails.Quantity</td>
                            <td>@orderDetails.UnitPrice</td>
                            <td> @orderDetails.Order.OrderStatus.OrderStatusTitle</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}